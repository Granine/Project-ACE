<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Lobby Details -->
        <TextView
            android:id="@+id/tvLobbyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lobby Name:" />

        <TextView
            android:id="@+id/tvGameType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Type: Baccarat" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/dealerCardsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Dealer Cards: " />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dealer_card_1"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/dealer_card_2"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/dealer_card_3"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/dealer_card_4"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/dealer_card_5"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/dealer_card_6"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="5"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/dealer_card_7"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="6"
                    android:text=""
                    android:background="@drawable/card_background" />
            </LinearLayout>

            <TextView
                android:id="@+id/dealerScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dealer Score:" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/playerCardsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Table Cards: " />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/player_card_1"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/player_card_2"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/player_card_3"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/player_card_4"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/player_card_5"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/player_card_6"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="5"
                    android:text=""
                    android:background="@drawable/card_background" />

                <TextView
                    android:id="@+id/player_card_7"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="6"
                    android:text=""
                    android:background="@drawable/card_background" />
            </LinearLayout>

            <TextView
                android:id="@+id/playerScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table Score:" />

        </LinearLayout>


        <!-- Chat Section -->
        <TextView
            android:id="@+id/tvLobbyChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llChatContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Dynamically add TextViews here for chat messages -->
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etEnterMessage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter Message" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send" />
        </LinearLayout>

        <Button
            android:id="@+id/spinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wheelView"
            android:layout_centerHorizontal="true"
            android:onClick="onSpinButtonClick"
            android:text="Spin" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>